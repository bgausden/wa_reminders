{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch in ts-node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "development",
                "DEBUG": "wa_reminders:*"
            },
            "runtimeArgs": [
                "--loader",
                "ts-node/esm",
            ],
            "args": [
                "${relativeFile}"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "<node_modules>/**"
            ],
            "type": "node",
        },
        {
            "args": [
                //"-u",
                //"tdd",
                //"--timeout",
                //"999999",
                //"--colors",
                //"${workspaceFolder}/test"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Launch Program",
            "env": {
                "NODE_ENV": "development"
            },
            "program": "${workspaceFolder}/dist/index.js",
            "outFiles": [
                "${workspaceFolder}/dist/**/*",
                "!**/node_modules/**"
            ],
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
        }
    ]
}